<configuration>
    <springProperty name="env" source="enviroment" />
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Configuración específica para el perfil 'prod' -->
    <springProfile name="prod">
        <appender name="LOKI" class="com.github.loki4j.logback.Loki4jAppender">
            <http>
                <url>https://loki-gal.linktic.com/loki/api/v1/push</url>
            </http>
            <format>
                <label>
                    <pattern>app=afiliaciones, environment=${env}, host=${HOSTNAME}</pattern>
                </label>
                <message>
                    <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
                </message>
            </format>
        </appender>
    </springProfile>

    <!-- Logger raíz -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
        <!-- El appender de Loki solo se añade en prod -->

    </root>
    <springProfile name="prod">
        <root level="INFO">
            <!-- El appender de Loki solo se añade en prod -->
            <appender-ref ref="LOKI" />
        </root>
    </springProfile>
</configuration>